generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Salads
  Soups
  Dishes
  Desserts
  Drinks
}

model Recipe {
  id           Int        @id @default(autoincrement())
  title        String
  image        String?
  description  String?
  ingredients  String?
  instructions String?
  category     Category
  feedback     Feedback[]
}

