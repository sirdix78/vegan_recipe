model Feedback {
  id            Int     @id @default(autoincrement())
  recipe_id     Int
  recipe        Recipe  @relation(fields: [recipe_id], references: [id], onDelete: Cascade)
  reviewer_name String
  rating        Int
  comment       String?
}
