
{
  "compilerOptions": {
    "target": "es2016",                   
    "module": "commonjs",                 
    "outDir": "./dist",                   
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true, 
    "noImplicitAny": true,               
    "skipLibCheck": true,               
    "strict": true,  
    "allowJs": true,                     
    "baseUrl": ".",                       
    "paths": {
      "@prisma/*": ["src/generated/prisma/*"]
    }
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts"
  ]
}
